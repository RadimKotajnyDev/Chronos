@page "/dig"
@inject NavigationManager Nav

<PageTitle>Chronos - Retrieve Capsule</PageTitle>

<div class="min-h-screen flex justify-center pt-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-8 text-center">
        
        <h1 class="mt-0 text-2xl font-bold text-gray-800">Retrieve a Capsule</h1>
        <p class="text-gray-600 mb-6">Enter the unique ID (GUID) provided when the capsule was buried.</p>

        <form @onsubmit="NavigateToCapsule">
            <div class="text-left">
                <label for="capsuleId" class="block text-sm font-medium text-gray-700">Capsule ID</label>
                <input @bind="inputId" 
                       id="capsuleId"
                       type="text" 
                       placeholder="e.g. a1b2c3d4-..."
                       class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent" 
                       required />
            </div>

            <button type="submit" 
                    class="mt-6 w-full bg-slate-900 hover:bg-slate-800 text-white font-bold px-4 py-2 rounded-md transition-colors">
                Dig it up
            </button>
        </form>

    </div>
</div>

@code {
    private string inputId = "";

    private void NavigateToCapsule()
    {
        if (!string.IsNullOrWhiteSpace(inputId))
        {
            // Trims whitespace to avoid URL errors
            Nav.NavigateTo($"/dig/{inputId.Trim()}");
        }
    }
}