@page "/"
@inject HttpClient Http
@using System.Net.Http.Json

<PageTitle>Chronos - New capsule</PageTitle>

<div class="h-fit flex justify-center pt-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-8">
        <h1 class="mt-0 text-3xl font-bold text-gray-800 text-center">Chronos</h1>
        <p class="text-center text-gray-600 mb-8">Send a message to the future.</p>

        <div class="space-y-5">
            <div>
                <label class="block mb-2 font-medium text-gray-700">Your message:</label>
                <textarea @bind="message" rows="4" placeholder="Write something..."
                          class="w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-slate-700 focus:border-transparent"></textarea>
            </div>

            <div>
                <label class="block mb-2 font-medium text-gray-700">Unlock date:</label>
                <input @bind="unlockAt" type="datetime-local"
                       class="w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 focus:outline-none focus:ring-2 focus:ring-slate-700 focus:border-transparent" />
            </div>

            <div>
                <label class="block mb-2 font-medium text-gray-700">Emergency key (Overrider ID):</label>
                <div class="flex gap-2">
                    <input @bind="customOverriderId" placeholder="Optional GUID"
                           class="flex-1 rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-slate-700 focus:border-transparent" />
                    
                    <button type="button" @onclick="GenerateGuid"
                            class="rounded-md bg-gray-100 px-4 py-2 font-medium text-gray-700 border border-gray-300 hover:bg-gray-200 transition-colors whitespace-nowrap">
                        Generate
                    </button>
                </div>
                <small class="text-gray-500 text-sm">If provided, you can open the capsule at any time.</small>
            </div>

            <button @onclick="BuryCapsule" disabled="@isSubmitting"
                    class="w-full rounded-md bg-slate-800 text-white py-3 font-medium transition-colors hover:bg-slate-700 disabled:bg-gray-400 disabled:cursor-not-allowed">
                @if (isSubmitting) { <span>Burying...</span> } else { <span>Bury capsule</span> }
            </button>

            @if (lastResponseId != null)
            {
                <div class="mt-4 rounded-md border border-emerald-500 bg-emerald-50 text-emerald-700 p-4 text-center">
                    <h3 class="font-semibold">Capsule buried!</h3>
                    <p class="mt-1">Save this ID; you will need it to retrieve the capsule:</p>
                    <div class="mt-2 font-mono font-semibold text-gray-800 bg-white border border-gray-200 rounded px-2 py-1 inline-block">@lastResponseId</div>
                    <div class="mt-3">
                        <a class="text-sky-600 hover:underline" href="/dig/@lastResponseId">Go to capsule →</a>
                    </div>
                </div>
            }

            @if (errorMessage != null)
            {
                <div class="mt-2 rounded-md border border-red-500 bg-red-50 text-red-700 p-3">@errorMessage</div>
            }
        </div>
    </div>
</div>

@code {
    private string message = "";
    private DateTime unlockAt = DateTime.Now.AddDays(1);
    private string customOverriderId = "";
    private bool isSubmitting = false;
    private string? lastResponseId;
    private string? errorMessage;

    private void GenerateGuid()
    {
        customOverriderId = Guid.NewGuid().ToString();
    }

    private async Task BuryCapsule()
    {
        isSubmitting = true;
        errorMessage = null;
        lastResponseId = null;

        try
        {
            Guid? overriderGuid = null;
            if (!string.IsNullOrWhiteSpace(customOverriderId))
            {
                if (Guid.TryParse(customOverriderId, out Guid parsed))
                {
                    overriderGuid = parsed;
                }
                else
                {
                    errorMessage = "The provided key is not a valid GUID.";
                    isSubmitting = false;
                    return;
                }
            }

            var payload = new
            {
                Message = message,
                UnlockAt = unlockAt,
                OverriderId = overriderGuid
            };

            var response = await Http.PostAsJsonAsync("/api/capsules/bury", payload);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<BuryResponseDto>();
                lastResponseId = result?.Id.ToString();
                message = "";
            }
            else
            {
                errorMessage = $"Server error: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to connect to server: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class BuryResponseDto
    {
        public Guid Id { get; set; }
        public string Message { get; set; }
    }
}