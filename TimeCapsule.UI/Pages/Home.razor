@page "/"
@inject HttpClient Http
@using System.Net.Http.Json

<PageTitle>Chronos - Nová kapsle</PageTitle>

<div class="center-container">
    <div class="card">
        <h1>⏳ Chronos</h1>
        <p class="text-red-500 text-3xl">Pošli vzkaz do budoucnosti.</p>

        <div class="form-group">
            <label>Tvůj vzkaz:</label>
            <textarea @bind="message" class="form-control" rows="4" placeholder="Napiš něco tajného..."></textarea>
        </div>

        <div class="form-group">
            <label>Datum odemčení:</label>
            <input @bind="unlockAt" type="datetime-local" class="form-control" />
        </div>

        <div class="form-group">
            <label>Nouzový klíč (Overrider ID):</label>
            <input @bind="customOverriderId" class="form-control" placeholder="Volitelné GUID (např. z guidgenerator.com)" />
            <small class="hint">Pokud vyplníš, můžeš kapsli otevřít kdykoliv.</small>
        </div>

        <button @onclick="BuryCapsule" class="btn-primary" disabled="@isSubmitting">
            @if (isSubmitting) { <span>Zakopávám... 🚧</span> } else { <span>Zakopat kapsli ⚰️</span> }
        </button>

        @if (lastResponseId != null)
        {
            <div class="success-box">
                <h3>✅ Kapsle zakopána!</h3>
                <p>Uschovej si toto ID, budeš ho potřebovat k vyzvednutí:</p>
                <div class="id-display">@lastResponseId</div>
                <br/>
                <a href="/dig/@lastResponseId">Jít rovnou ke kapsli →</a>
            </div>
        }
        
        @if (errorMessage != null)
        {
            <div class="error-box">❌ @errorMessage</div>
        }
    </div>
</div>

@code {
    private string message = "";
    private DateTime unlockAt = DateTime.Now.AddDays(1); // Defaultně zítra
    private string customOverriderId = "";
    private bool isSubmitting = false;
    private string? lastResponseId;
    private string? errorMessage;

    private async Task BuryCapsule()
    {
        isSubmitting = true;
        errorMessage = null;
        lastResponseId = null;

        try
        {
            // Validace GUID (pokud je vyplněno, musí být platné)
            Guid? overriderGuid = null;
            if (!string.IsNullOrWhiteSpace(customOverriderId))
            {
                if (Guid.TryParse(customOverriderId, out Guid parsed))
                {
                    overriderGuid = parsed;
                }
                else
                {
                    errorMessage = "Zadaný klíč není platné GUID!";
                    isSubmitting = false;
                    return;
                }
            }

            var payload = new
            {
                Message = message,
                UnlockAt = unlockAt,
                OverriderId = overriderGuid
            };

            var response = await Http.PostAsJsonAsync("/api/capsules/bury", payload);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<BuryResponseDto>();
                lastResponseId = result?.Id.ToString();
                message = ""; // Vyčistit pole
            }
            else
            {
                errorMessage = $"Chyba serveru: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Nepodařilo se připojit k serveru: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class BuryResponseDto
    {
        public Guid Id { get; set; }
        public string Message { get; set; }
    }
}

<style>
    /* Jednoduchý styling přímo v komponentě */
    .center-container { display: flex; justify-content: center; padding-top: 50px; font-family: sans-serif; }
    .card { background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); width: 100%; max-width: 500px; }
    h1 { margin-top: 0; color: #333; text-align: center; }
    .subtitle { text-align: center; color: #666; margin-bottom: 2rem; }
    .form-group { margin-bottom: 1.2rem; }
    .form-group label { display: block; margin-bottom: 0.5rem; font-weight: bold; color: #444; }
    .form-control { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 1rem; box-sizing: border-box; }
    .hint { color: #888; font-size: 0.8rem; }
    .btn-primary { width: 100%; background: #2c3e50; color: white; border: none; padding: 12px; font-size: 1.1rem; border-radius: 6px; cursor: pointer; margin-top: 1rem; transition: background 0.2s; }
    .btn-primary:hover { background: #34495e; }
    .btn-primary:disabled { background: #95a5a6; cursor: not-allowed; }
    .success-box { margin-top: 2rem; padding: 1rem; background: #e8f8f5; border: 1px solid #2ecc71; border-radius: 6px; text-align: center; color: #27ae60; }
    .error-box { margin-top: 1rem; padding: 1rem; background: #fdedec; border: 1px solid #e74c3c; border-radius: 6px; color: #c0392b; }
    .id-display { font-family: monospace; background: #fff; padding: 5px; border: 1px solid #ddd; margin-top: 5px; font-weight: bold; color: #333; }
</style>