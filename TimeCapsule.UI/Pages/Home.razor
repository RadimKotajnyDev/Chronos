@page "/"
@inject HttpClient Http
@using System.Net.Http.Json

<PageTitle>Chronos - Nová kapsle</PageTitle>

<div class="flex justify-center pt-12 font-sans">
    <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-[500px] text-center">
        <h1 class="mt-0 text-[#333]">⏳ Chronos</h1>
        <p class="text-4xl text-red-400">Pošli vzkaz do budoucnosti.</p>

        <div class="mb-4 text-left">
            <label class="block mb-2 font-medium">Tvůj vzkaz:</label>
            <textarea @bind="message" class="w-full p-2.5 box-border border border-[#ccc] rounded" rows="4" placeholder="Napiš něco tajného..."></textarea>
        </div>

        <div class="mb-4 text-left">
            <label class="block mb-2 font-medium">Datum odemčení:</label>
            <input @bind="unlockAt" type="datetime-local" class="w-full p-2.5 box-border border border-[#ccc] rounded" />
        </div>

        <div class="mb-4 text-left">
            <label class="block mb-2 font-medium">Nouzový klíč (Overrider ID):</label>
            <input @bind="customOverriderId" class="w-full p-2.5 box-border border border-[#ccc] rounded" placeholder="Volitelné GUID (např. z guidgenerator.com)" />
            <small class="block mt-1 text-xs text-[#888]">Pokud vyplníš, můžeš kapsli otevřít kdykoliv.</small>
        </div>

        <button @onclick="BuryCapsule" class="w-full py-3 px-5 bg-[#3498db] text-white rounded-md cursor-pointer border-0 font-bold text-base mt-2 disabled:bg-gray-400 disabled:cursor-not-allowed" disabled="@isSubmitting">
            @if (isSubmitting) { <span>Zakopávám... 🚧</span> } else { <span>Zakopat kapsli ⚰️</span> }
        </button>

        @if (lastResponseId != null)
        {
            <div class="mt-6 p-4 bg-[#d4edda] border border-[#c3e6cb] rounded-lg text-[#155724]">
                <h3 class="mt-0 text-lg">✅ Kapsle zakopána!</h3>
                <p>Uschovej si toto ID, budeš ho potřebovat k vyzhednutí:</p>
                <div class="bg-[#f8f9fa] p-3 rounded my-2 font-mono text-sm break-all">@lastResponseId</div>
                <br/>
                <a href="/dig/@lastResponseId" class="text-[#007bff] underline">Jít rovnou ke kapsli →</a>
            </div>
        }
        
        @if (errorMessage != null)
        {
            <div class="mt-4 p-4 bg-[#f8d7da] border border-[#f5c6cb] rounded-lg text-[#721c24]">❌ @errorMessage</div>
        }
    </div>
</div>

@code {
    private string message = "";
    private DateTime unlockAt = DateTime.Now.AddDays(1); // Defaultně zítra
    private string customOverriderId = "";
    private bool isSubmitting = false;
    private string? lastResponseId;
    private string? errorMessage;

    private async Task BuryCapsule()
    {
        isSubmitting = true;
        errorMessage = null;
        lastResponseId = null;

        try
        {
            // Validace GUID (pokud je vyplněno, musí být platné)
            Guid? overriderGuid = null;
            if (!string.IsNullOrWhiteSpace(customOverriderId))
            {
                if (Guid.TryParse(customOverriderId, out Guid parsed))
                {
                    overriderGuid = parsed;
                }
                else
                {
                    errorMessage = "Zadaný klíč není platné GUID!";
                    isSubmitting = false;
                    return;
                }
            }

            var payload = new
            {
                Message = message,
                UnlockAt = unlockAt,
                OverriderId = overriderGuid
            };

            var response = await Http.PostAsJsonAsync("/api/capsules/bury", payload);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<BuryResponseDto>();
                lastResponseId = result?.Id.ToString();
                message = ""; // Vyčistit pole
            }
            else
            {
                errorMessage = $"Chyba serveru: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Nepodařilo se připojit k serveru: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class BuryResponseDto
    {
        public Guid Id { get; set; }
        public string Message { get; set; }
    }
}
